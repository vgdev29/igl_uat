<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/peach_light"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/liner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/shape_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="13 Mar 2020"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@color/green"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BP 1205620"
                    android:textIsSelectable="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textColor="@color/green"/>


                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Mayur Vihar-Phase III"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/dark_gray"/>

                <TextView
                    android:id="@+id/mobile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:layout_below="@+id/user_name_text"
                    android:text=""
                    android:drawableRight="@drawable/ic_phone_call"
                    android:drawablePadding="5dp"
                    android:textColor="@color/dark_gray"/>
                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_gravity="right"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="#8E2828"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>