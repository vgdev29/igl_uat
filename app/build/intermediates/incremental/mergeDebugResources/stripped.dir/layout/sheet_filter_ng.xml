<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet_curved_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-15dp"
        android:src="@drawable/downarrow_bottomsheet"></ImageView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:paddingHorizontal="16dp"
        android:text="SORT BY"
        android:textColor="#868686"
        android:textSize="@dimen/_11sdp"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#D9D9D9"></View>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_ng_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:gravity="right|center_vertical"
            android:paddingVertical="@dimen/_10sdp"
            android:text="NG Done"
            android:textColor="#111111"
            android:textSize="@dimen/_12sdp"></RadioButton>

        <RadioButton
            android:id="@+id/rb_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:gravity="right|center_vertical"
            android:paddingVertical="@dimen/_10sdp"
            android:text="Others"
            android:textColor="#111111"
            android:textSize="@dimen/_12sdp"></RadioButton>
    </RadioGroup>
</LinearLayout>