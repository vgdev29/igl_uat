<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="@dimen/_315sdp"
    android:background="@drawable/shape_white">
    <ImageView
        android:id="@+id/crose_img"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_margin="@dimen/_2sdp"
        android:background="@drawable/cancel"
        android:layout_gravity="right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/rad"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Schedule Task"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:layout_weight=".3"
                android:paddingLeft="@dimen/_5sdp"
                android:background="@drawable/shape_blue_border"
                android:layout_marginRight="@dimen/_10sdp"

                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="12-2-20202"/>
            <Button
                android:id="@+id/date_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_7sdp"
                android:text="select date"
                android:layout_weight=".7"
                android:background="@drawable/shape_cornor_radious"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"

            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_weight=".3"
                android:paddingLeft="@dimen/_5sdp"
                android:background="@drawable/shape_blue_border"
                android:layout_marginRight="@dimen/_10sdp"

                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="12-10 pm"/>
            <Button
                android:id="@+id/time_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_7sdp"
                android:text="select Time"
                android:layout_weight=".7"
                android:background="@drawable/shape_cornor_radious"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:text="Description"/>
        <EditText
            android:id="@+id/descreption_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:background="@drawable/shape_blue_border"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:gravity="top"
            android:padding="@dimen/_5sdp"
            android:textIsSelectable="true"
            android:maxLines="3"
            android:hint="Description"/>
        <Button
            android:id="@+id/scheduletask_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28sdp"
            android:textSize="@dimen/_9sdp"
            android:text="Submit"
            android:background="@drawable/shape_cornor_radious"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"

           android:layout_gravity="center"

            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>