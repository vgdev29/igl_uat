<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/shape_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">
<TextView
    android:id="@+id/date_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="13 Mar 2020"
    android:layout_marginTop="@dimen/_10sdp"
    android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="@dimen/_60sdp"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/green"
                android:orientation="vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BP 1205620"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/green"/>

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rajeev Malik"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Mayur Vihar-Phase III"
                android:textColor="@color/dark_gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/red_light_shape"
                android:orientation="horizontal">

           <Button
               android:layout_width="@dimen/_35sdp"
               android:layout_height="@dimen/_19sdp"
               android:text="STATUS"
               android:layout_marginTop="@dimen/_2sdp"
               android:layout_marginBottom="@dimen/_2sdp"
               android:layout_marginLeft="@dimen/_2sdp"
               android:textColor="@color/white"
               android:textSize="@dimen/_5sdp"
               android:background="@drawable/red_shape_round"
               />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="pending for NG"
                    android:gravity="center"
                    android:textSize="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:weightSum="4"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/attendance_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/shape_yellow_color_cornor"
                        android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/appointment"
                        />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textSize="@dimen/_5sdp"
                        android:textColor="@color/black"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Attendance"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/attendance_layout11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/shape_yellow_color_cornor"
                        android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image11"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/to_do_tasklist"
                        />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/title111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="TO-DO List"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attendance_layout22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/shape_yellow_color_cornor"
                        android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image22"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/edit"
                        />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/title11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/black"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Edit"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attendance_layout33"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/shape_yellow_color_cornor"
                        android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image44"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:src="@drawable/task_location" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/title44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Location"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>