<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:text="Customer LPG Connection Details:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/dark_gray"

                android:layout_marginTop="@dimen/_1sdp"
                android:textSize="@dimen/_7sdp"
                android:text="Do you have an a LPG connection:" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:id="@+id/cb1"
                    android:layout_below="@+id/tvCb"
                    android:layout_centerHorizontal="true"
                    android:checked="false"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:id="@+id/cb2"
                    android:layout_below="@+id/cb1"
                    android:layout_centerHorizontal="true"
                    android:checked="false"/>
        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/dark_gray"


                android:textSize="@dimen/_7sdp"
                android:text="Do you have an a LPG connection:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indane Gas"
                    android:id="@+id/indanagas"
                    android:layout_weight="1"
                    android:layout_below="@+id/tvCb"
                    android:layout_centerHorizontal="true"
                    android:checked="false"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bharat Gas"
                    android:id="@+id/bharatgas"
                    android:layout_weight="1"
                    android:layout_below="@+id/cb1"
                    android:layout_centerHorizontal="true"
                    android:checked="false"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HP Gas"
                    android:id="@+id/hpgas"
                    android:layout_weight="1"
                    android:layout_below="@+id/tvCb"
                    android:layout_centerHorizontal="true"
                    android:checked="false"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:id="@+id/other"
                    android:layout_weight="1"
                    android:layout_below="@+id/cb1"
                    android:layout_centerHorizontal="true"
                    android:checked="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <EditText

                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:hint="Name of LPG Distributor:"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:background="@drawable/shape_blue_border"
                        android:textSize="@dimen/_10sdp"
                        android:inputType="textCapWords"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText

                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:hint="Consumer No:"
                        android:inputType="number"
                        android:maxLength="10"

                        android:textSize="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:background="@drawable/shape_blue_border"
                        android:singleLine="true"
                        android:textColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_7sdp"
                android:text="Unique LPG ID(17 digits):" />

            <LinearLayout
                android:id="@+id/layout_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="9"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_below="@+id/layout_header"
                android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextone"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:inputType="number"
                android:maxLength="1"
                android:text="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/shape_blue_border"
                android:layout_weight="1"/>
                <EditText
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:inputType="number"
                android:maxLength="1"/>
                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:maxLength="1"/>
                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:background="@drawable/shape_blue_border"
                    android:layout_weight="1"
                    android:maxLength="1"/>
                <EditText
                    android:id="@+id/editTexttwo"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:maxLength="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" _ "
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/rad"/>
                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:maxLength="1"/>
                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:maxLength="1"/>
                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:maxLength="1"/>
                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:background="@drawable/shape_blue_border"
                    android:layout_weight="1"
                    android:maxLength="1"/>
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_below="@+id/layout_header"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTexton11e"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:maxLength="1"
                    android:background="@drawable/shape_blue_border"
                    android:layout_weight="1"/>
                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:inputType="number"
                    android:maxLength="1"/>
                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:maxLength="1"/>
                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:background="@drawable/shape_blue_border"
                    android:layout_weight="1"
                    android:maxLength="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" _ "
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/rad"/>
                <EditText
                    android:id="@+id/editTexttwo11"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:maxLength="1"/>

                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:maxLength="1"/>
                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:maxLength="1"/>
                <EditText
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:background="@drawable/shape_blue_border"
                    android:maxLength="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:text="Payment Details:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_6sdp"
                android:text="(Non-Refundable additional charges, if applicable to be paid on completion of the installation as per Clause No.2 of Customers rights &amp; Obligations)" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <EditText

                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:hint="Pay Order/DD/Cheque No"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:background="@drawable/shape_blue_border"
                        android:textSize="@dimen/_10sdp"
                        android:inputType="textCapWords"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText

                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:hint="Date"
                        android:inputType="number"
                        android:maxLength="10"

                        android:textSize="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:background="@drawable/shape_blue_border"
                        android:singleLine="true"
                        android:textColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <EditText

                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:hint="Drawn no"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:background="@drawable/shape_blue_border"
                        android:textSize="@dimen/_10sdp"
                        android:inputType="textCapWords"
                        android:singleLine="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText

                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:hint="Amount"
                        android:inputType="number"
                        android:maxLength="10"

                        android:textSize="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:background="@drawable/shape_blue_border"
                        android:singleLine="true"
                        android:textColor="@color/white" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:padding="@dimen/_10sdp"
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_alignParentLeft="true"
            android:id="@+id/backBT"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backBT"
            android:minWidth="@dimen/_80sdp"
            android:minHeight="@dimen/_27sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/white" />

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/nextBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/_80sdp"
            android:minHeight="@dimen/_27sdp"
            android:textSize="@dimen/_10sdp"
            android:background="@color/colorPrimary"
            android:text="@string/nextBT"

            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>