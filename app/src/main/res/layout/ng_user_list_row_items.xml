<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#F0F7F0"
    android:id="@+id/ll_bpNumber">



    <LinearLayout
        android:id="@+id/liner_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/shape_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="3">
                    <TextView
                        android:id="@+id/tv_perferedTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2021-aprile 16"

                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="status"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="right|center_vertical"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/green"/>
                    <TextView
                        android:id="@+id/job_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="job not started"
                        android:layout_weight="1"

                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@color/green"
                    android:orientation="vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_bpName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:textIsSelectable="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/green"/>
                    <TextView
                        android:id="@+id/tv_contactNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"


                        android:textColor="@color/dark_gray"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:text="fdjfhjdfhdjfhdjkfhdjfhdj"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight=".5"
                        android:textSize="@dimen/_8sdp"

                        android:textColor="@color/dark_gray"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="1.5"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btn_tpiDetails"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_7sdp"
                        android:text="TPI Info"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/shape_cornor_radious"
                        android:gravity="center"
                        android:visibility="visible"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/tv_priority"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_7sdp"

                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/shape_cornor_radious"
                        android:gravity="center"
                        android:visibility="visible"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>