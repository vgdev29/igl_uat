<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_bpNumber">

    <RelativeLayout
        android:id="@+id/liner_layout"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/shape_white">

        <LinearLayout
            android:id="@+id/ll_details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="13 Mar 2020"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:visibility="visible"
                android:text=""
                android:textColor="@color/green"
                android:textIsSelectable="true"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bp_no_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BP 1205620"
                    android:textColor="@color/green"
                    android:textIsSelectable="true"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rajeev Malik"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Mayur Vihar-Phase III"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_9sdp" />
            <TextView
                android:id="@+id/control_room"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAllCaps="true"
                android:text=""
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_9sdp" />
            <TextView
                android:id="@+id/mobile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:layout_below="@+id/user_name_text"
                android:text="9827122454eee"
                android:drawableRight="@drawable/ic_phone_call"
                android:drawablePadding="5dp"
                android:textColor="@color/dark_gray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/ll_details"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="vertical">



            <Button
                android:id="@+id/info_button"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/shape_cornor_radious"
                android:text="TPI INfo"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:visibility="visible" />



            <Button
                android:id="@+id/job_start_button"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/shape_cornor_radious"
                android:text="Start Job"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_7sdp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:visibility="visible" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Priority"
            android:textSize="10sp"
            android:layout_margin="5dp"
            android:textStyle="italic"
           android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/dark_gray"/>
    </RelativeLayout>



</LinearLayout>