<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_210sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:backgroundTint="#F5EADA"
      android:background="@drawable/curved_bg_stroke">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_1sdp"
                android:text="BP No. :"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/tv_bp_num"
                android:padding="@dimen/_1sdp"
                android:text="1565498854"
                android:gravity="end"
                android:textStyle="bold"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_1sdp"
                android:text="House No. :"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/tv_house_num"
                android:padding="@dimen/_1sdp"
                android:text="12"
                android:gravity="end"
                android:textStyle="bold"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_1sdp"
                android:text="Floor No. :"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:id="@+id/tv_floor_num"
                android:padding="@dimen/_1sdp"
                android:text="12"
                android:gravity="end"
                android:textStyle="bold"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_remove"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/cancel"></ImageView>
</RelativeLayout>