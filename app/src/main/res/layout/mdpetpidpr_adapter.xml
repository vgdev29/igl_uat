<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/liner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:background="@drawable/shape_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal"
            android:id="@+id/mdpe_card"

            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="13 Mar 2020"
                            android:textColor="@color/black"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:text="Allocation Number :"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_allo_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/value_10dp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="BP 1205620"
                        android:textColor="@color/green"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:text="Sub-Allocation Number :"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_suballo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/value_10dp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="BP 1205620"
                        android:textColor="@color/green"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:text="DPR No :"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tv_dpr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="@dimen/value_10dp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="right"
                       android:text="8457958648"
                        android:drawablePadding="@dimen/_10sdp"
                        android:textColor="@color/black_31"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:id="@+id/tv_date_key"
                        android:text="Submit Date :"
                        android:layout_weight="1"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/tv_submit_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/value_10dp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="right"
                        android:layout_weight="1"
                        android:textColor="@color/black_31"
                        android:textIsSelectable="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/_9sdp"
                        tools:text="14-11-2021" />

                </LinearLayout>






            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>