<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/rad"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_gravity="center"
            android:background="@drawable/back"
            android:layout_margin="@dimen/_3sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="APPOINTMENT"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_30sdp"
            android:textColor="@color/white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/shape_blue_border"
            >
            <Spinner
                android:id="@+id/spinner_todo_catagory"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_margin="3dp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight=".2"
                android:spinnerMode="dialog"
                android:autofillHints="City/Region"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/shape_white"
                android:dropDownSelector="@null"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/dropdown"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/bp_no_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/green"
            android:background="@drawable/shape_blue_border"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:gravity="top"
            android:textStyle="bold"
            android:padding="@dimen/_5sdp"
            android:maxLines="3"
            android:textIsSelectable="true"
            android:hint=""/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/rad"

                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:gravity="left"

                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Date"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_weight="1"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_date_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:layout_weight=".3"
                    android:paddingLeft="@dimen/_5sdp"
                    android:background="@drawable/shape_blue_border"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="12-2-20202"/>
                <Button
                    android:id="@+id/date_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:textSize="@dimen/_10sdp"
                    android:text="select date"
                    android:layout_weight=".7"
                    android:background="@drawable/shape_cornor_radious"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>



        </LinearLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/rad"

            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:textStyle="bold"
            android:text="Time"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"

            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_weight=".3"
                android:paddingLeft="@dimen/_5sdp"
                android:background="@drawable/shape_blue_border"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="12-10 pm"/>
            <Button
                android:id="@+id/time_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_10sdp"
                android:text="select Time"
                android:layout_weight=".7"
                android:background="@drawable/shape_cornor_radious"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/rad"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="Description"/>
        <EditText
            android:id="@+id/descreption_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:background="@drawable/shape_blue_border"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:gravity="top"
            android:textIsSelectable="true"
            android:padding="@dimen/_5sdp"
            android:maxLines="3"
            android:hint="Description"/>
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28sdp"
            android:textSize="@dimen/_9sdp"
            android:text="Submit"
            android:background="@drawable/shape_cornor_radious"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:layout_gravity="center"

            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>