<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/rad"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_gravity="center"
            android:background="@drawable/back"
            android:layout_margin="@dimen/_3sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="NG User List"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_30sdp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_searchBar"

        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight=".2"
            android:padding="2dp"
            android:background="@drawable/shape_oval"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/search_gray"/>
            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:hint=""
                android:singleLine="true"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@drawable/shape_blue"
                android:layout_marginLeft="@dimen/_3sdp"
                android:paddingLeft="@dimen/_1sdp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight=".8"
            android:id="@+id/ll_sort"

            android:background="@drawable/shape_oval_green_sort"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/list_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
               app:srcCompat="@drawable/ic_sort_black_24dp"

               />
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_ngAssignment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        />

    <RelativeLayout
        android:id="@+id/rel_noNgUserListingData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_cloudOff_attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_cloud_off" />

        <TextView
            android:id="@+id/tv_ngUserListdata"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_cloudOff_attendance"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="No internet connection.Make sure Wi-Fi
             or cellular data is turned on "
            android:textSize="15sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnTryAgain"
            android:layout_width="115dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_ngUserListdata"
            android:layout_centerHorizontal="true"
            android:background="#FF0000"
            android:text="TRY AGAIN"
            android:textColor="@color/white"
            android:visibility="visible" />
    </RelativeLayout>



</LinearLayout>