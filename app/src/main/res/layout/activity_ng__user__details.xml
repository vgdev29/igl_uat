                        >


                        <TextView
                            android:id="@+id/tv_conversationDate"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:text="Conversation Date"
                            android:layout_weight="1.5"
                            android:textSize="@dimen/_10sdp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            />
                        <EditText
                            android:id="@+id/et_conversationDate"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:hint="Select Delay Date"
                            android:background="@drawable/background_input_mandatory"
                            android:inputType="datetime"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"

                            android:textColor="@color/green"
                            android:textSize="@dimen/_10sdp"

                            />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:id="@+id/ll_delayDate"

                    android:orientation="horizontal"
                    android:weightSum="2">


                    <TextView
                        android:id="@+id/tv_delayDate"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Select Date:"
                        android:textSize="@dimen/_10sdp" />


                    <Button
                        android:id="@+id/et_delayDateValue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="Select Delay Date"
                        android:background="@drawable/background_input_mandatory"

                        android:textColor="@color/green"
                        android:textSize="@dimen/_10sdp"

                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:id="@+id/ll_audioFile"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">



                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_gravity="center|left"
                        android:visibility="visible"
                        android:gravity="left"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/audioFile_button"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:text="Audio File"
                            android:gravity="center"
                            android:textColor="@color/white" />
                        <TextView
                            android:id="@+id/filename1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="FileName 1: " />
                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:id="@+id/ll_hold_image"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/hold_image"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:padding="@dimen/_1sdp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/shape_blue_border"
                        />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_gravity="center|right"
                        android:gravity="right"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/picture_button"
                            android:background="@color/colorPrimary"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:text="Picture"
                            android:gravity="center"

                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:padding="@dimen/_10sdp"
                    android:id="@+id/bottomLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <Button
                        android:layout_alignParentRight="true"
                        android:id="@+id/submit_button"
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"

                        android:textSize="@dimen/_10sdp"
                        android:text="@string/submit"
                        android:textColor="@color/white" />

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>