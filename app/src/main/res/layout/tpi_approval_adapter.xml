<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/liner_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/shape_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="13 Mar 2020"

                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pending"
                        android:textStyle="bold"
                        android:gravity="right|center"
                        android:layout_gravity="right|center_vertical"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@color/green"
                    android:orientation="vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/bp_no_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BP 1205620"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:textIsSelectable="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textColor="@color/green"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:visibility="gone"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/claimed_button"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:textSize="@dimen/_7sdp"
                            android:text="Claim"

                            android:layout_marginLeft="@dimen/_10sdp"

                            android:background="@drawable/shape_cornor_radious"
                            android:gravity="center"
                            android:visibility="visible"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>

                        <Button
                            android:id="@+id/unclaimed_button"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:textSize="@dimen/_7sdp"
                            android:text="UnClaim"
                            android:visibility="gone"
                            android:background="@drawable/shape_cornor_radious"
                            android:gravity="center"

                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rajeev Malik"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/address_text"
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_9sdp"
                        android:text="Mayur Vihar-Phase III"
                        android:textColor="@color/dark_gray"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:visibility="gone"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/job_start_button"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:textSize="@dimen/_7sdp"
                            android:text="Start Job"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@drawable/shape_cornor_radious"
                            android:gravity="center"
                            android:visibility="visible"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>