<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:background="@color/rad"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1.2"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/back"
                android:layout_margin="@dimen/_3sdp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight=".6"
            android:text="RFC Status"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/view_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_8sdp"
                android:visibility="gone"
                android:textColor="@color/white"
                android:text="LEAVE LIST"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/bp_no_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:text="BP Number"
                    android:textIsSelectable="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Address"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:text="Indraprast Gas Limted IGL Gas Limted Noida Sector 12 PinCode 201306"
                    android:textSize="@dimen/_9sdp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fesibility_person_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Tushar kant"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:id="@+id/rfc_person_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Tushar kant"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:id="@+id/fesibility_person_no_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Tushar kant"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:id="@+id/rfc_person_no_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Tushar kant"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textStyle="bold"


                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_10sdp"
                android:text="Status Type" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/shape_blue_border"
                android:layout_weight=".5">
                <Spinner
                    android:id="@+id/spinner_master"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="3dp"
                    android:layout_weight=".8"
                    android:background="@drawable/shape_white"
                    android:dropDownSelector="@null"
                    />
                <ImageView

                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/dropdown"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textStyle="bold"


                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_10sdp"
                android:text="Sub Status" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/shape_blue_border"
                android:layout_weight=".5">
                <Spinner
                    android:id="@+id/spinner_sub_master"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="3dp"
                    android:layout_weight=".8"
                    android:background="@drawable/shape_white"
                    android:dropDownSelector="@null"
                    />
                <ImageView

                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/dropdown"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_10sdp"
                android:text="Pipeline Category " />
            <TextView
                android:id="@+id/pipleline_text"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:background="@drawable/background_input_mandatory"
                android:textSize="@dimen/_13sdp"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:singleLine="true"
                />
            <LinearLayout
               android:id="@+id/pipeline_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:weightSum="1"
                android:visibility="visible"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/shape_blue_border"
                android:layout_weight=".5">
                <Spinner
                    android:id="@+id/spinner_pipe_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_margin="3dp"
                    android:layout_weight=".8"
                    android:background="@drawable/shape_white"
                    android:dropDownSelector="@null"
                    />
                <ImageView

                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/_11sdp"
                    android:layout_height="@dimen/_11sdp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/dropdown"
                    />
            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/rad"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:text="Descreption"/>
            <EditText
                android:visibility="gone"
                android:id="@+id/descreption_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:background="@drawable/shape_blue_border"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:gravity="top"
                android:padding="@dimen/_5sdp"
                android:maxLines="4"
                android:hint="Descreption"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:weightSum="2">

                <Button
                    android:id="@+id/approve_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_28sdp"
                    android:textSize="@dimen/_9sdp"
                    android:text="Submit"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/shape_cornor_radious"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/decline_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:textSize="@dimen/_9sdp"
                    android:text="Decline"
                    android:layout_weight="1"
                    android:background="@drawable/shape_cornor_radious"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>