<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_5sdp"
        android:text="Type of Id Proof"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1.3"
            android:background="@drawable/background_input_mandatory"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <Spinner
                android:id="@+id/id_proof_spinner"
                android:layout_width="0dp"
                android:layout_height="@dimen/_26sdp"
                android:layout_weight="1.9"
                android:background="@drawable/shape_white"
                android:dropDownSelector="@null" />

            <ImageView

                android:layout_width="0dp"
                android:layout_height="@dimen/_11sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight=".1"
                android:background="@drawable/dropdown" />
        </LinearLayout>

        <Button
            android:id="@+id/id_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/_26sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight=".7"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="ID Proof"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_capture_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/adhar_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:layout_weight="1"
            android:background="@drawable/shape_blue_border"
            android:scaleType="fitXY"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_submit_id_proof"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingVertical="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_30sdp"                android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:paddingHorizontal="@dimen/value_14dp"
        android:text="SUBMIT ID PROOF"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:text="Type of Address Proof"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_weight="1.3"
            android:background="@drawable/background_input_mandatory"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="2">

            <Spinner
                android:id="@+id/address_proof_spinner"
                android:layout_width="0dp"
                android:layout_height="@dimen/_26sdp"
                android:layout_weight="1.9"
                android:background="@drawable/shape_white"
                android:dropDownSelector="@null" />

            <ImageView

                android:layout_width="0dp"
                android:layout_height="@dimen/_11sdp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight=".1"
                android:background="@drawable/dropdown" />
        </LinearLayout>

        <Button
            android:id="@+id/address_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/_27sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight=".7"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Address Proof"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_capture_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/address_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:background="@drawable/shape_blue_border"
            android:scaleType="fitXY" />
        <TextView
            android:id="@+id/tv_pdf_path"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:paddingHorizontal="@dimen/_6sdp"
            android:gravity="center"
            android:hint="Select file to upload"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:background="@drawable/shape_blue_border" />

    </LinearLayout>
    <TextView
        android:id="@+id/btn_submit_address_proof"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingVertical="@dimen/_6sdp"
        android:layout_marginHorizontal="@dimen/_30sdp"                android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:paddingHorizontal="@dimen/value_14dp"
        android:text="SUBMIT ADDRESS PROOF"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/peach_light"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="10dp"
        android:text="Type of Ownership"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/owner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Owner"
            android:textSize="@dimen/_10sdp" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Rented"
            android:textSize="@dimen/_10sdp" />

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:text="If rented or otherwise, please submit NOC*(to be issues by the lawful owner of the proprty) OR the valid rent agreement with the lawful owner of the premise."
        android:textColor="@color/black"
        android:textSize="@dimen/_7sdp"
        android:textStyle="italic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/ll_capture_customersig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/signature_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:background="@drawable/shape_blue_border"
                android:scaleType="fitXY" />
        </LinearLayout>

        <Button
            android:id="@+id/customer_image_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:text="Cust Sig."
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp" />
    </LinearLayout>


    <EditText
        android:id="@+id/owner_name"
        android:layout_width="200dp"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/background_input_mandatory"
        android:hint="Owner Name"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_owner_signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:visibility="gone"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/ll_capture_ownersig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1.5"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/owner_signature_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_blue_border"
                android:scaleType="fitXY" />

        </LinearLayout>

        <Button
            android:id="@+id/owner_image_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:text="Owner Sig."
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp" />

    </LinearLayout>
    <TextView
        android:id="@+id/btn_submit_signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:paddingHorizontal="@dimen/value_14dp"
        android:paddingVertical="@dimen/_6sdp"
        android:text="UPDATE SIGNATURE"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp" />
</LinearLayout>
</ScrollView>