                            android:gravity="center"
                            android:hint="Burner details"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/ll_home_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:orientation="vertical"
                        android:visibility="visible"
                        >

                        <ImageView
                            android:id="@+id/iv_homeAddress"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_centerVertical="true"


                            android:background="@drawable/shape_blue_border"

                            android:scaleType="fitXY"
                            android:text="Home Address" />

                        <Button
                            android:id="@+id/home_address_btn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/shape_blue_border"
                            android:backgroundTint="@color/rad"
                            android:textSize="@dimen/_8sdp"
                            android:gravity="center"
                            android:text="Selfie with Meter"
                            android:textColor="@color/white"
                            />

                        <ImageView
                            android:id="@+id/iv_meterPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/shape_blue_border"

                            android:scaleType="fitXY" />
                        <Button
                            android:id="@+id/btn_meterPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/value_5dp"
                            android:background="@drawable/shape_blue_border"
                            android:backgroundTint="@color/rad"
                            android:textSize="@dimen/_8sdp"
                            android:gravity="center"
                            android:text="Meter Photo"
                            android:textColor="@color/white"
                            />

                        <ImageView
                            android:id="@+id/iv_installation"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/shape_blue_border"

                            android:scaleType="fitXY" />
                        <Button
                            android:id="@+id/btn_installation"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/shape_blue_border"
                            android:backgroundTint="@color/rad"
                            android:textSize="@dimen/_8sdp"
                            android:gravity="center"
                            android:text="Installation"
                            android:textColor="@color/white"
                            />

                        <ImageView
                            android:id="@+id/iv_serviceCard"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/shape_blue_border"

                            android:scaleType="fitXY" />
                        <Button
                            android:id="@+id/btn_serviceCard"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_9sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/shape_blue_border"
                            android:backgroundTint="@color/rad"
                            android:textSize="@dimen/_8sdp"
                            android:gravity="center"
                            android:text="Service card"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_decline_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/et_decline_remarks"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:background="@drawable/background_input_mandatory"
                        android:hint="Remarks"
                        android:inputType="textCapCharacters"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_customerSign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/signature_image"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/shape_blue_border"
                        android:padding="@dimen/_1sdp"
                        android:scaleType="fitXY" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|right"
                        android:gravity="right"
                        android:paddingRight="@dimen/_5sdp">

                        <Button
                            android:id="@+id/signature_button"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"

                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:text="Signature"
                            android:textColor="@color/white"

                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/bottomLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <Button

                        android:id="@+id/approve_button"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_blue_border"
                        android:backgroundTint="@color/rad"
                        android:text="Approve"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                    <Button
                        android:id="@+id/decline_button"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:background="@drawable/shape_blue_border"
                        android:backgroundTint="@color/rad"
                        android:text="Decline"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


            </LinearLayout>
