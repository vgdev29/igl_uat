<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7F8"
    android:orientation="vertical"
    tools:context=".Activity.NICustomerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/rad"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="FeedBack "
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/contact_details"
                android:textColor="@color/color_202020"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/product_white_curved_bg"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_editext_bg"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp">

                    <!--<TextView-->
                    <!--android:visibility="gone"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="top"-->
                    <!--android:layout_marginLeft="18dp"-->
                    <!--android:gravity="top"-->
                    <!--android:text="*"-->
                    <!--android:textColor="#ff00"-->
                    <!--android:textSize="15dp" />-->

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_name"
                        style="@style/TextLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:textColorHint="@color/inactive_tab_text">

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#fff"
                            android:gravity="start"
                            android:hint="Full name"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingLeft="19dp"
                            android:paddingTop="2dp"
                            android:paddingRight="16dp"
                            android:singleLine="true"
                            android:textColor="@color/color_202020"
                            android:textSize="12sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/curved_editext_bg"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"

                    >

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_mob"
                        style="@style/TextLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:textColorHint="@color/inactive_tab_text">

                        <EditText
                            android:id="@+id/et_mob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#fff"
                            android:digits="0123456789"
                            android:gravity="start"
                            android:hint="Phone number"
                            android:importantForAutofill="no"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:paddingLeft="19dp"
                            android:paddingTop="2dp"
                            android:paddingRight="16dp"
                            android:singleLine="true"
                            android:textColor="@color/color_202020"
                            android:textSize="12sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corner_curved_edittext_bg"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"

                    >

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_email"
                        style="@style/TextLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:textColorHint="@color/inactive_tab_text">

                        <EditText

                            android:id="@+id/et_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="#fff"
                            android:gravity="start"
                            android:hint="Email address"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:paddingLeft="19dp"
                            android:paddingTop="2dp"
                            android:paddingRight="16dp"
                            android:singleLine="true"
                            android:textColor="@color/color_202020"
                            android:textSize="12sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                </FrameLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="start"
                android:text="Address details"
                android:textColor="@color/color_202020"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/product_white_curved_bg"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp">


                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/curved_editext_bg"
                    android:drawableRight="@drawable/dropdown"
                    android:gravity="center"
                    android:paddingHorizontal="27dp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:text="Select City"
                    android:textColor="@color/color_202020"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/curved_editext_bg"
                    android:drawableRight="@drawable/dropdown"
                    android:gravity="center"
                    android:paddingHorizontal="27dp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:text="Select Area"
                    android:textColor="@color/color_202020"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/tv_society"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/curved_editext_bg"
                    android:drawableRight="@drawable/dropdown"
                    android:gravity="center"
                    android:paddingHorizontal="27dp"
                    android:paddingVertical="12dp"
                    android:text="Select Society"

                    android:textColor="@color/color_202020"
                    android:textSize="15dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_85sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/curved_editext_bg"
                    android:gravity="center_vertical"
                    android:hint="Full Address"
                    android:padding="@dimen/_16sdp"
                    android:id="@+id/et_address"
                    android:textColor="@color/color_202020"
                    android:textSize="15dp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:gravity="start"
                android:text="Other Information"
                android:textColor="@color/color_202020"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/product_white_curved_bg"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp">
                <TextView
                    android:id="@+id/tv_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/curved_editext_bg"
                    android:drawableRight="@drawable/dropdown"
                    android:gravity="center"
                    android:paddingHorizontal="27dp"
                    android:paddingVertical="@dimen/_12sdp"
                    android:text="Select Reason"
                    android:textColor="@color/color_202020"
                    android:textSize="15dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_65sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/corner_curved_edittext_bg"
                    android:gravity="center_vertical"
                    android:hint="Remarks"
                    android:padding="@dimen/_16sdp"
                    android:id="@+id/et_remarks"
                    android:textColor="@color/color_202020"
                    android:textSize="15dp" />

            </LinearLayout>

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/submit_button"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="12dp"

                android:textSize="@dimen/_10sdp"
                android:text="@string/submit"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>