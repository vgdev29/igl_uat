<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comp_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:textIsSelectable="true"
            android:fontFamily="@font/abhayalibre_regular"
            android:text="Enter Service Quantity"
            android:textSize="@dimen/_14sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_31"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:gravity="start"
            android:textIsSelectable="true"
            android:fontFamily="@font/abhayalibre_regular"
            android:text="Enter Quantity"
            android:textSize="@dimen/_14sdp"/>

        <EditText
            android:id="@+id/comp_qty"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="30dp"
            android:background="@drawable/background_input_mandatory"
            android:hint="Qty"
            android:maxLines="1"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textStyle="bold"
            android:fontFamily="@font/abhayalibre_regular"
            android:textColor="@color/black"
            android:layout_gravity="center"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_31"
            android:layout_gravity="center"
            android:gravity="start"
            android:textIsSelectable="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/abhayalibre_regular"
            android:text="Remarks (If Any)"
            android:textSize="@dimen/_14sdp"/>

        <EditText
            android:id="@+id/comp_remarks"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="70dp"
            android:background="@drawable/shape_blue_border"
            android:hint="remarks"
            android:padding="@dimen/_3sdp"
            android:textSize="@dimen/_12sdp"
            android:gravity="start"
            android:inputType="textAutoComplete"
            android:textStyle="bold"
            android:fontFamily="@font/abhayalibre_regular"
            android:textColor="@color/black"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2">


            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:text="Cancel"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="18dp"
                android:fontFamily="@font/abhayalibre_regular"
                android:paddingLeft="5dp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/shape_cornor_radious"/>
            <Button
                android:id="@+id/ok_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:text="Save"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="18dp"
                android:fontFamily="@font/abhayalibre_regular"
                android:paddingLeft="5dp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:background="@drawable/shape_cornor_radious"/>

        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>