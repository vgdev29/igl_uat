<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/product_white_curved_bg"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:paddingVertical="@dimen/_14sdp"
    android:layout_marginBottom="8dp"
    android:paddingHorizontal="@dimen/_7sdp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_weight="1"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:padding="@dimen/_1sdp"
            android:text="BP Number"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tv_bp_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape_blue_border"
            android:maxLines="1"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="@color/black_31"
            android:textSize="@dimen/_10sdp"
            tools:text="454145148579" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_1sdp"
                android:text="House No."
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/et_house"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="@drawable/shape_blue_border"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/black_31"
                android:textSize="@dimen/_10sdp"
                tools:text="12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="1"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_1sdp"
                android:text="Floor"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/et_floor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="@drawable/shape_blue_border"
                android:maxLines="1"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/black_31"
                android:textSize="@dimen/_10sdp"
                tools:text="14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>