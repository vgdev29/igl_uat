<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_15sdp"
        tools:context=".Mdpe.MPipeFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_13sdp"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/montserrat_regular"
                android:text="Allocation No." />

            <TextView
                android:id="@+id/et_allo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textStyle="bold"
                android:textColor="@color/black_31"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_13sdp"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/montserrat_regular"
                android:text="Sub Allocation No." />

            <TextView
                android:id="@+id/et_suballo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textStyle="bold"
                android:textColor="@color/black_31"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_13sdp"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/montserrat_regular"
                android:text="DPR No." />

            <TextView
                android:id="@+id/et_dpr"
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textStyle="bold"
                android:textColor="@color/black_31"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_13sdp"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/montserrat_regular"
                android:text="Latitude" />

            <TextView
                android:id="@+id/et_lat"
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"

                android:layout_weight="1"
                android:layout_marginBottom="@dimen/_3sdp"

                android:textStyle="bold"
                android:textColor="@color/black_31"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_13sdp"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/montserrat_regular"
                android:text="Longitude" />

            <TextView
                android:id="@+id/et_longi"
                android:layout_width="0dp"
                android:layout_height="@dimen/_15sdp"

                android:layout_weight="1"
                android:layout_marginBottom="@dimen/_3sdp"

                android:textStyle="bold"
                android:textColor="@color/black_31"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/background_input_mandatory"
            android:weightSum="2">

            <Spinner
                android:id="@+id/spinner_method"
                android:layout_width="0dp"
                android:layout_height="@dimen/_26sdp"
                android:layout_margin="3dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="2"
                android:text="Select Size"
                android:autofillHints="City/Region"
                android:dropDownSelector="@null"
                android:spinnerMode="dialog" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/background_input_mandatory"
            android:weightSum="2">

            <Spinner
                android:id="@+id/spinner_size"
                android:layout_width="0dp"
                android:layout_height="@dimen/_26sdp"
                android:layout_margin="3dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="2"
                android:autofillHints="City/Region"
                android:dropDownSelector="@null"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:weightSum="2">

           <!-- <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_13sdp"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/montserrat_regular"
                android:text="Length/Unit (mm/no.)" />-->

            <EditText
                android:id="@+id/et_length"
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/background_input_mandatory"
                android:hint="0.0"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/_3sdp"
                android:inputType="numberDecimal"
                android:textStyle="bold"
                android:textColor="@color/black_31"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center"
                android:textSize="@dimen/_12sdp" />

            <Spinner
                android:id="@+id/spinner_unit"
                android:layout_width="0dp"
                android:layout_height="@dimen/_26sdp"
                android:layout_margin="3dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Select Unit"
                android:autofillHints="City/Region"
                android:dropDownSelector="@null"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/_55sdp"
                android:layout_weight="1"
                android:textSize="@dimen/_13sdp"
                android:gravity="start|center_vertical"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_3sdp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/montserrat_regular"
                android:text="Image" />

            <ImageView
                android:id="@+id/img_graph"
                android:layout_width="0dp"
                android:layout_height="@dimen/_55sdp"
                android:hint="0.0"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/_3sdp"
                android:src="@drawable/add_images" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:text="or"
            android:textSize="@dimen/_20sdp"
            android:visibility="gone"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:visibility="gone"
            android:weightSum="2">
            <Button
                android:id="@+id/pdf_button"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Select PDF"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/txt_pdf"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:hint="pdf path"
                android:gravity="center"/>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Details"
            android:textSize="@dimen/_13sdp"
            android:gravity="start|center_vertical"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_3sdp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/montserrat_regular"/>

        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:hint="Address"
            android:singleLine="false"
            android:background="@drawable/shape_blue_border"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="start"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/dark_gray"/>


        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />




            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>