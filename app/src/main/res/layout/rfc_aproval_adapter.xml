<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    >
                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13 Mar 2020"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_13sdp"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13sdp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/green"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >
                <TextView
                    android:id="@+id/bp_no_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BP 1205620"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_alignParentStart="true"
                    android:textIsSelectable="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/green"/>
                    <Button
                        android:id="@+id/info_button"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_7sdp"
                        android:text="TPI Info"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/shape_cornor_radious"
                        android:gravity="center"
                        android:visibility="visible"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rajeev Malik"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/mobile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:layout_below="@+id/user_name_text"
                    android:text="9827122454eee"
                    android:drawableRight="@drawable/ic_phone_call"
                    android:drawablePadding="5dp"
                    android:textColor="@color/dark_gray"/>
                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight=".5"
                    android:textSize="@dimen/_8sdp"
                    android:text="Mayur Vihar-Phase III"
                    android:layout_below="@+id/mobile_text"
                    android:textColor="@color/dark_gray"/>
                    <Button
                        android:id="@+id/job_start_button"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:textSize="@dimen/_7sdp"
                        android:text="Start Job"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/shape_cornor_radious"
                        android:gravity="center"
                        android:visibility="gone"
                        android:paddingLeft="@dimen/_10sdp"
                        android:layout_alignEnd="@+id/address_text"
                        android:layout_below="@+id/user_name_text"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/descreption_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_weight=".5"
                    android:textSize="@dimen/_8sdp"
                    android:text="Decline Review"
                    android:textColor="@color/dark_gray"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>